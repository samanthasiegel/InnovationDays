	<script>
		function validateForm(){
			var formField = document.getElementsByClassName("input");
			var len = formField.length;
			for(var i=0; i<len; i++){
				if(formField[i].value.indexOf("$")!== -1){
					alert("Please don't include any symbols ($) in the text fields.");
					return false;
				}
			}
			return true;
		}
